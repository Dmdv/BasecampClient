      <tr>
        <td><strong>ID:</strong></td>
        <td><%= item['id'] %></td>
      </tr>
      <tr>
        <td><strong>Content:</strong></td>
        <td><%= item['content'] %></td>
      </tr>
      <tr>
        <td><strong>Due on:</strong></td>
