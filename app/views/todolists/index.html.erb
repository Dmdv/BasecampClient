<h1>Todolists</h1>

  <% @todolists.each do |todo| %>
    <table class="todolists">
      <tr>
        <td><b>ID:</b></td>
        <td>
          <%= todo['id'] %>
        </td>
      </tr>
      <tr>
        <td><b>Name:</b></td>
        <td>
          <%= todo['name'] %>
        </td>
      </tr>
      <tr>
        <td><b>Description:</b></td>
        <td>
          <%= todo['description'] %>
        </td>
      </tr>
      <tr>
        <td><b>Created at:</b></td>
        <td>
          <%= todo['created_at'] %>
        </td>
      </tr>
      <tr>
        <td><b>Updated at:</b></td>
        <td>
          <%= todo['updated_at'] %>
        </td>
      </tr>
      <tr>
        <td><b>Url:</b></td>
        <td><a href="<%= todo['url'] %>"><%= todo['url'] %></a></td>
      </tr>
      <tr>
        <td><b>Completed:</b></td>
        <td>
          <%= todo['completed'] %>
        </td>
      </tr>
      <tr>
        <td><b>Position:</b></td>
        <td>
          <%= todo['position'] %>
        </td>
      </tr>
      <tr>
        <td><b>Items:</b></td>
        <td>
          <%= link_to "Show items",
                      :controller => "todolists", :action => "items", :id => @projectid, :todoid => todo['id'] %>
        </td>
      </tr>
    </table>
    <br/>
  <% end %>

<p><%= link_to "Create TODO list", todolists_new_path %></p>

<p>Find me in app/views/todolists/index.html.erb</p>
